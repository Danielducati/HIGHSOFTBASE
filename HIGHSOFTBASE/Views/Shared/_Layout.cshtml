<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HIGHSOFTBASE</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome (CDN) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />

    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="app d-flex">
        @await Html.PartialAsync("_Sidebar")

        <main class="main-area flex-fill">
            <header class="topbar d-flex align-items-center justify-content-between px-4 py-2">
                <div>
                    <button class="btn btn-link sidebar-toggle d-md-none"><i class="fa fa-bars"></i></button>
                    <strong>@ViewData["Title"]</strong>
                </div>
                <div class="user-actions">
                    <span class="me-2">Administrador Principal</span>
                    <span class="badge bg-primary">Admin</span>
                </div>
            </header>

            <section class="content px-4 py-4">
                @RenderBody()
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
