@model HIGHSOFTBASE.Models.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Tarjeta -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark text-center py-3 rounded-top-4">
                    <h4 class="mb-0">
                        <i class="fa-solid fa-user-pen me-2"></i> Editar Empleado
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">
                                <i class="fa-solid fa-id-card me-1 text-primary"></i> Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Correo -->
                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-bold">
                                <i class="fa-solid fa-envelope me-1 text-success"></i> Correo
                            </label>
                            <input asp-for="Correo" class="form-control" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <!-- Tipo -->
                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label fw-bold">
                                <i class="fa-solid fa-briefcase me-1 text-warning"></i> Tipo
                            </label>
                            <input asp-for="Tipo" class="form-control" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa-solid fa-arrow-left me-1"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-warning text-dark">
                                <i class="fa-solid fa-floppy-disk me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
