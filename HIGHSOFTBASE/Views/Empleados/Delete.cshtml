@model HIGHSOFTBASE.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Tarjeta -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i> Confirmar Eliminación
                    </h4>
                </div>

                <div class="card-body p-4">
                    <h5 class="text-center text-muted mb-4">
                        ¿Seguro que deseas eliminar este empleado?
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold text-secondary">
                            <i class="fa-solid fa-id-card me-1 text-primary"></i> Nombre
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-4 fw-bold text-secondary">
                            <i class="fa-solid fa-envelope me-1 text-success"></i> Correo
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Correo)
                        </dd>

                        <dt class="col-sm-4 fw-bold text-secondary">
                            <i class="fa-solid fa-briefcase me-1 text-warning"></i> Tipo
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Tipo)
                        </dd>
                    </dl>

                    <!-- Botones -->
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa-solid fa-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa-solid fa-trash me-1"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
