@model IEnumerable<HIGHSOFTBASE.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold"><i class="fa-solid fa-file-invoice-dollar me-2"></i> Ventas</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i> Nueva Venta
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Servicio)</th>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <th>@Html.DisplayNameFor(model => model.Empleado)</th>
                        <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Servicio)</td>
                            <td>
                                💲 @item.Precio.ToString("N0") <!-- Formato con separador de miles -->
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Empleado.Correo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Usuario.Correo)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.VentaId" class="btn btn-sm btn-warning text-white me-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.VentaId" class="btn btn-sm btn-info text-white me-1">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.VentaId" class="btn btn-sm btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
