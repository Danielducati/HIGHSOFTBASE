@model HIGHSOFTBASE.Models.Venta

@{
    ViewData["Title"] = "Eliminar Venta";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="fa-solid fa-trash-alt me-2"></i> Confirmar Eliminación</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta venta?</h5>

                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Servicio:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Servicio)</dd>

                        <dt class="col-sm-3 fw-bold">Precio:</dt>
                        <dd class="col-sm-9">$@Html.DisplayFor(model => model.Precio)</dd>

                        <dt class="col-sm-3 fw-bold">Empleado:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Empleado.Correo)</dd>

                        <dt class="col-sm-3 fw-bold">Cliente:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Usuario.Correo)</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="VentaId" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left me-2"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa-solid fa-trash me-2"></i> Eliminar Venta
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
