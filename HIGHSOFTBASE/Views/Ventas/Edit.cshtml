@model HIGHSOFTBASE.Models.Venta

@{
    ViewData["Title"] = "Editar Venta";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-dark text-center">
                    <h4><i class="fa-solid fa-pen-to-square me-2"></i> Editar Venta</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="VentaId" />

                        <div class="mb-3">
                            <label asp-for="Servicio" class="form-label fw-bold"></label>
                            <input asp-for="Servicio" class="form-control" placeholder="Ej: Corte de cabello" />
                            <span asp-validation-for="Servicio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Precio" class="form-label fw-bold"></label>
                            <input asp-for="Precio" class="form-control" placeholder="Ej: 20000" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EmpleadoId" class="form-label fw-bold"></label>
                            <select asp-for="EmpleadoId" class="form-select" asp-items="ViewBag.EmpleadoId"></select>
                            <span asp-validation-for="EmpleadoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UsuarioId" class="form-label fw-bold"></label>
                            <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId"></select>
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left me-2"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="fa-solid fa-save me-2"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
