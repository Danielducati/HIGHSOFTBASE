@model HIGHSOFTBASE.Models.Cita

<h2>Agendar Cita</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="Titulo">Título</label>
        <input asp-for="Titulo" class="form-control" />
    </div>

    <div class="form-group">
        <label for="FechaInicio">Fecha inicio</label>
        <input asp-for="FechaInicio" type="datetime-local" class="form-control" />
    </div>

    

    <div class="form-group">
        <label for="EmpleadoId">Empleado</label>
        <select asp-for="EmpleadoId" asp-items="ViewBag.Empleados" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="ServicioId">Servicio</label>
        <select asp-for="ServicioId" asp-items="ViewBag.Servicios" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="ClienteId">Cliente</label>
        <select asp-for="ClienteId" asp-items="ViewBag.Clientes" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="Estado">Estado</label>
        <select asp-for="Estado" asp-items="Html.GetEnumSelectList<EstadoCita>()" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
